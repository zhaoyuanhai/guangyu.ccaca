<div>
    <form name="tenantCreateForm" novalidate>
        <div class="modal-header">
            <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">
                <span>@L("修改用户")</span>
            </h4>
        </div>
        <div class="modal-body">
            <div class="form-group form-float">
                <div class="form-line">
                    <input class="form-control" ng-model="vm.model.userName" type="text">
                    <label class="form-label">@L("账号")</label>
                </div>
            </div>
            <div class="form-group form-float">
                <div class="form-line">
                    <input class="form-control" ng-model="vm.model.passWord" type="text">
                    <label class="form-label">@L("密码")</label>
                </div>
            </div>
            <div class="form-group form-float">
                <div class="form-line">
                    <input class="form-control" ng-model="vm.model.realName" type="text">
                    <label class="form-label">@L("用户名")</label>
                </div>
            </div>
            <div class="form-group form-float">
                <div class="form-line">
                    <input class="form-control" ng-model="vm.model.email" type="text">
                    <label class="form-label">@L("邮箱")</label>
                </div>
            </div>
            <div class="form-group form-float">
                <div class="form-line">
                    <input class="form-control" ng-model="vm.model.phone" type="text">
                    <label class="form-label">@L("电话")</label>
                </div>
            </div>
            <div class="form-group form-float">
                <div class="checkbox-inline">
                    <input class="filled-in" id="isVip" value="true" ng-model="vm.model.isVip" type="checkbox">
                    <label class="form-label" for="isVip">@L("是否会员")</label>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" ng-click="vm.cancel()">@L("Cancel")</button>
            <button type="submit" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="tenantCreateForm.$invalid">@L("Save")</button>
        </div>
    </form>
</div>