
<div class="row clearfix" ng-controller="app.views.ccaca.user.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("用户列表")
                </h2>
                <i class="fa fa-spin fa-spinner" ng-if="vm.isTableLoading"></i>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class="waves-effect waves-block()" ng-click="vm.refresh();"><i class="material-icons">refresh</i> @L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <!-- ******************************************************** -->
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>@L("账号")</th>
                            <th>@L("密码")</th>
                            <th>@L("用户名")</th>
                            <th>@L("邮箱")</th>
                            <th>@L("手机号")</th>
                            <th>@L("是否会员")</th>
                            <th>@L("创建时间")</th>
                            <th>@L("Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in vm.models">
                            <td>{{ item.userName }}</td>
                            <td>{{ item.passWord }}</td>
                            <td>{{ item.realName }}</td>
                            <td>{{ item.email }}</td>
                            <td>{{ item.phone }}</td>
                            <td>{{ item.isVip?'是':'否' }}</td>
                            <td>{{ item.createTime | date:'yyyy-MM-dd' }}</td>
                            <td class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li>
                                        <a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.openModifyModal(item)">
                                            <i class="material-icons">create</i>@L("Edit")
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.delete(item)">
                                            <i class="material-icons">delete_sweep</i>@L("Delete")
                                        </a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!-- ******************************************************** -->
                <button type="button" data-toggle="modal" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" ng-click="vm.openCreationModal()">
                    <i class="material-icons">add</i>
                </button>
            </div>
        </div>
    </div>
</div>