<div>
    <form name="tenantCreateForm" novalidate>
        <div class="modal-header">
            <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">
                <span>@L("修改左侧轮播图")</span>
            </h4>
        </div>
        <div class="modal-body">
            <div class="form-group form-float">
                <div class="form-line">
                    <input id="filename" class="form-control" ng-model="vm.file.name" type="text">
                    <label class="form-label">@L("图片名称")</label>
                </div>
            </div>
            <div class="form-group form-float">
                <div class="form-line">
                    <input id="filepath" type="file" class="form-control">
                    <label class="form-label">@L("图片文件")</label>
                </div>
            </div>
            <div class="form-group form-float">
                <div class="form-line">
                    <select class="form-control" ng-model="vm.file.lang" ng-options="item.id as item.name for item in vm.langs"></select>
                    <label class="form-label">@L("语言")</label>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" ng-click="vm.cancel()">@L("Cancel")</button>
            <button type="submit" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="tenantCreateForm.$invalid">@L("Save")</button>
        </div>
    </form>
</div>