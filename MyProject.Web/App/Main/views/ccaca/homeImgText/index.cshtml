
<div class="row clearfix" ng-controller="app.views.ccaca.homeImgText.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("图文配置")
                </h2>
                <i class="fa fa-spin fa-spinner" ng-if="vm.isTableLoading"></i>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class="waves-effect waves-block()" ng-click="vm.refresh();"><i class="material-icons">refresh</i> @L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <!-- ******************************************************** -->
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>@L("标题")</th>
                            <th>@L("内容")</th>
                            <th>@L("图片")</th>
                            <th>@L("语言列表")</th>
                            <th>@L("Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="m in vm.models.model">
                            <td>{{m.title}}</td>
                            <td>{{m.content | totext | length:20}}</td>
                            <th>
                                <img class="preview" ng-src="{{m.cover}}" />
                            </th>
                            <td>
                                <a class="lan"
                                   ng-click="vm.setLanguage(m,lang)"
                                   ng-repeat="lang in vm.models.currentLanguages[m.id]">
                                    {{lang.lang}}
                                </a>
                            </td>
                            <td class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li>
                                        <a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.openModifyModal(m)">
                                            <i class="material-icons">create</i>@L("Edit")
                                        </a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!-- ******************************************************** -->
            </div>
        </div>
    </div>
</div>