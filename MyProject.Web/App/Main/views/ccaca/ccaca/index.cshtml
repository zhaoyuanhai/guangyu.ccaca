<div class="row clearfix" ng-controller="app.views.ccaca.ccaca.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("CCACA编辑")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class="waves-effect waves-block()" ng-click="vm.refresh();"><i class="material-icons">refresh</i> @L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">
                <!-- ******************************************************** -->
                <div class="form-group form-float">
                    <div class="form-line focused">
                        <input class="form-control" ng-model="vm.model.title" type="text">
                        <label class="form-label">@L("标题")</label>
                    </div>
                </div>
                <div class="form-group form-float">
                    <div class="form-line focused">
                        <textarea id="editor"></textarea>
                        <label class="form-label">@L("内容")</label>
                    </div>
                </div>
                <div class="form-group form-float">
                    <div class="form-line focused">
                        <select class="form-control" ng-model="vm.model.lang"
                                ng-change="vm.setLanguage()"
                                ng-options="item.id as item.name for item in vm.langs"></select>
                        <label class="form-label">@L("语言")</label>
                    </div>
                </div>
                <p></p>
                <button type="submit" class="btn btn-primary blue"
                        ng-click="vm.save()">
                    @L("Save")
                </button>
                <!-- ******************************************************** -->
            </div>
        </div>
    </div>
</div>